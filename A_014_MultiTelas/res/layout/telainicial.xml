<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Multi Telas"
        android:textSize="25sp" />

    <Button
        android:id="@+id/telainicial_btn_chamast1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chama ST1" />

    <Button
        android:id="@+id/telainicial_btn_chamast2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chama ST2" />

    <Button
        android:id="@+id/telainicial_btn_telefone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telefone" />

    <TextView
        android:id="@+id/telainicial_tv_resultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valor Retornado"
        android:textSize="20sp" />

</LinearLayout>